<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    android:focusableInTouchMode="true"
    >
    <include
        layout="@layout/toolbar_main">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <!--Notifications-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="5dp"

                app:cardElevation="3dp"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"

                    >
                    <TextView
                        android:id="@+id/notificationTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.7"
                        android:text="Notifications"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"

                        android:layout_weight="0.3">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchButton"
                            android:layout_width="wrap_content"
                            android:checked="false"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="8dp"
                            />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Profile-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/profileLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:weightSum="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Profile"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"

                        android:textSize="14sp"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:id="@+id/ToggleImg"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Favorites-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/favLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Favorites"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Refer a friend-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/referLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Refer a friend"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Contact Us-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/contactLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Contact Us"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Terms & Conditions-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/termsLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Terms &amp; Conditions"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Privacy Policy-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/privacyLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Privacy Policy"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Change Password-->
            <androidx.cardview.widget.CardView
                android:id="@+id/changepassCARD"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/changepassLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Change Password"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Logout-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="15dp"

                app:cardElevation="3dp"
                >
                <LinearLayout
                    android:id="@+id/logoutLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight="0.8"
                        android:text="Log out"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/right_arrow_s" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>